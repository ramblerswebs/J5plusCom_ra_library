<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">
    <name>com_ra_library</name>
    <creationDate>2026-01-29</creationDate>
    <copyright>2026 Chris Vaughan</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Chris Vaughan</author>
    <authorEmail>ruby.tuesday@ramblers-webs.org.uk</authorEmail>
    <authorUrl>https://ramblers-webs.org.uk</authorUrl>
    <version>1.0.0</version>
    <description>Component to enable emailing from a javascript</description>
    <namespace path="src">Ramblers\Component\Ra_library</namespace>
    
    
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <update> <!-- Runs on update -->
        <schemas>
            <schemapath type="mysql">sql/updates</schemapath>
        </schemas>
    </update>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    

    <files folder="site">
        <folder>src</folder>
        
        <folder>tmpl</folder>
    </files>
    <media destination="com_ra_library" folder="media">
        <folder>css</folder>
        <folder>js</folder>
        <filename>joomla.asset.json</filename>
    </media>
    <languages folder="site/languages">
        
        <language tag="en-GB">en-GB/en-GB.com_ra_library.ini</language>
    </languages>
    <administration>
        <menu>COM_RA_LIBRARY</menu>
        <submenu>
            
            <menu link="option=com_ra_library&amp;view=emaillogs" view="emaillogs" alt="Ra_library/Emaillogs">COM_RA_LIBRARY_TITLE_EMAILLOGS</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <folder>forms</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>services</folder>
            <folder>presets</folder>
            <folder>sql</folder>
        </files>
        <languages folder="administrator/languages">
            
            <language tag="en-GB">en-GB/en-GB.com_ra_library.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_ra_library.sys.ini</language>
        </languages>
    </administration>
    <config>
        <fields name="params">
            <fieldset name="component">
                <field name="save_history" default="0" />
            </fieldset>
        </fields>
    </config>
    <plugins>
    </plugins>
    

    <updateservers>
        <server type="extension" priority="1" name="com_ra_library">https://nocdn.component-creator.com/index.php?task=builder.preupdatecheckhook&amp;option=com_combuilder&amp;component=NzYyMDYtMjE3MDk1</server>
    </updateservers>
</extension>
