<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_RA_LIBRARY_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_RA_LIBRARY_LIST_FULL_ORDERING"
               description="COM_RA_LIBRARY_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_RA_LIBRARY_ID_ASC</option>
            <option value="a.id DESC">COM_RA_LIBRARY_ID_DESC</option>
            <option value="a.datetime ASC">COM_RA_LIBRARY_DATETIME_ASC</option>
            <option value="a.datetime DESC">COM_RA_LIBRARY_DATETIME_DESC</option>
            <option value="a.to ASC">COM_RA_LIBRARY_TO_ASC</option>
            <option value="a.to DESC">COM_RA_LIBRARY_TO_DESC</option>
            <option value="a.title ASC">COM_RA_LIBRARY_TITLE_ASC</option>
            <option value="a.title DESC">COM_RA_LIBRARY_TITLE_DESC</option>
            <option value="a.replyto ASC">COM_RA_LIBRARY_REPLYTO_ASC</option>
            <option value="a.replyto DESC">COM_RA_LIBRARY_REPLYTO_DESC</option>
            <option value="a.sent ASC">COM_RA_LIBRARY_SENT_ASC</option>
            <option value="a.sent DESC">COM_RA_LIBRARY_SENT_DESC</option>
            <option value="a.message ASC">COM_RA_LIBRARY_MESSAGE_ASC</option>
            <option value="a.message DESC">COM_RA_LIBRARY_MESSAGE_DESC</option>

        </field>

        <field name="limit"
               type="limitbox"
               label="COM_RA_LIBRARY_LIST_LIMIT"
               description="COM_RA_LIBRARY_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>